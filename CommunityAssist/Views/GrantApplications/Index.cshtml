@model CommunityAssist.Models.GrantApplication
@{
    ViewBag.Title = "Index";
    SelectList grantTypeList = ViewBag.GrantTypes;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>New Grant Application</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.GrantApplicationRequestAmount, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.GrantApplicationRequestAmount, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
            @Html.ValidationMessageFor(model => model.GrantApplicationRequestAmount, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.GrantApplicationReason, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.GrantApplicationReason, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.GrantApplicationReason, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.GrantTypeKey, "GrantTypeKey", htmlAttributes: new { @class = "control-label col-md-2"})
        <div class="col-md-10">
            @Html.DropDownList("Thingy", grantTypeList, new { @class = "form-control"})
            @Html.ValidationMessageFor(model => model.GrantTypeKey, "", new { @class = "text-danger"})
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Submit" class="btn btn-default" />
        </div>
    </div>
</div>
    @section Scripts {

        @Scripts.Render("~/bundles/jqueryval")

    }
}

